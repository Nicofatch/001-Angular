<% layout('layout') -%>
<% stylesheet('/css/vendor/flexslider.css') -%>

<% script('/js/vendor/jquery.flexslider.js') -%>

<% script('/js/vendor/jquery.autocomplete.min.js') -%>
<% script('/js/dom/home.js') -%>



<section class="home-slider-top">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="home-slider-top-text">
					<h1>Spotly</h1>
					<h3>Find places to enjoy your favorite sports</h3>
				</div>

				<form role="explore" class="" method="get" action="/explore">
		                <div class="form-group col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-lg-4 col-sm-4">
		                    <div class="input-group">
		                        <span class="input-group-addon input-lg"><i class="icon-map-marker"></i></span>
		                        <input id="k" type="text" name="k" class="form-control input-lg" placeholder="Search">
		                    </div>
		                </div>
		                <div class="search-location form-group col-lg-4 col-sm-4">
		                    <div class="input-group">
		                        <span class="input-group-addon input-lg"><i class="icon-location-arrow"></i></span>
		                        <input type="text" name="l" id="l" class="form-control input-lg"  placeholder="Around">
		                    </div>
		                </div>
		                <input type="hidden" name="lat" id="lat">
		                <input type="hidden" name="lng" id="lng">
		                <button id="search-button" type="submit" class="btn btn-success btn-lg"> <i class="icon-search icon-white"></i> <b>FIND SPOTS</b></button>
	            </form>
			</div>

		</div>
		<div class="row home-slider-bottom">
	    	<div class="col-lg-8 col-lg-offset-2">
				<!-- Slider content -->
				<div id="main-slider" class="flexslider" style="height:" >
					<ul class="slides">
						<li><img src="../img/slides/slide1.png" alt=""/></li>
						<li><img src="../img/slides/slide2.png" alt=""/></li>
					</ul>
				</div>
			</div>
		</div>
	
	</div>
</section>
<section id="services">
      	
	<div class="container">
		<div class="row">
			<div class="content-head">
				<h2>What can I do ?</h2>
				<div class="line"></div>
			</div>
			<div class="col-lg-4 services-info">
				<div class="ico">
					<span class="icon-stack icon-5x">
						<i class="shadow icon-circle icon-muted icon-stack-base"></i>
						<i class="icon-map-marker"></i>
					</span>
				</div>
				<div class="desc">
					<h4>Spot places</h4>
					<p>Share sport-related points of interest.</p>
				</div>
			</div>

			<div class="col-lg-4 services-info">
				<div class="ico">
					<span class="icon-stack icon-5x">
						<i class="shadow icon-circle icon-muted icon-stack-base"></i>
						<i class="icon-search"></i>
					</span>	
				</div>
				<div class="desc">
					<h4>Find any spots around</h4>
					<p>Find sporting activities around you.</p>
				</div>
			</div>
		
			<div class="col-lg-4 services-info">
				<div class="ico">
					<span class="icon-stack icon-5x">
						<i class="shadow icon-circle icon-muted icon-stack-base"></i>
						<i class="icon-comments"></i>
					</span>
				</div>
				<div class="desc">
					<h4>Grow a community</h4>
					<p>Meet and exchange with people that share your passion</p>
				</div>
			</div>
		</div>
	</div>
</section>

