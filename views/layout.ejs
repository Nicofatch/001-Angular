<!DOCTYPE html>
<html ng-app="<%= app%>">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <title><%= title %></title>
        <link rel="stylesheet" href="/css/vendor/bootstrap.custo.css">
        <link rel="stylesheet" href="/css/style.css">
        <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
        <link href="http://fonts.googleapis.com/css?family=Grand+Hotel" rel="stylesheet" type="text/css">
        <%-stylesheets%>
    </head>
    <body>
        <div class="container">
            <!-- NAV BAR -->
            <nav class="navbar navbar-default" role="navigation">
                <div class="navbar-header">
                    <!-- SEARCH BUTTON FOR XS SCREENS -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <i style="color:#777777" class="icon-search icon-large"></i>
                    </button>
                    <!-- APP TITLE -->
                    <a class="navbar-brand" href="/" style="font-family: 'Grand Hotel', cursive;font-size:2em;">Spotly</a>
                    <!-- MENU LINKS FOR XS SCREENS -->
                    <ul class="nav navbar-nav visible-xs pull-right" id="navbar-xs">
                        <li><a href="/map/#/1"><i class="icon-map-marker icon-large"></i></a></li>
                        <li><a href="/maps"><i class="icon-globe icon-large"></i></a></li>
                        <li><a href="/maps"><span class="badge badge-important">8</span></a></li>
                        <li class="nav-img"><a href="/maps"><img src="/img/Avatar-128.png" class="img-small"></a></li>
                    </ul>
                </div>

                <!-- NAV BAR FOR SMALL, MEDIUM & LARGE SCREENS -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <!-- SEARCH FORM -->
                    <form class="navbar-form navbar-left col-lg-7 col-md-6 col-sm-7" role="search">
                        <div id="nav-search-spot" class="form-group col-lg-5 col-sm-5">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-map-marker"></i></span>
                                <input type="text" class="form-control" placeholder="Search">
                            </div>
                        </div>
                        <div id="nav-search-location" class="form-group col-lg-5 col-sm-5">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-location-arrow"></i></span>
                                <input type="text" class="form-control" placeholder="Around">
                            </div>
                        </div>
                        <button id="nav-search-button" type="submit" class="btn btn-primary"> <i class="icon-search icon-white"></i></button>
                    </form> 

                    <!-- MENU LINKS FOR MEDIUM & LARGE SCREENS -->
                    <ul class="pull-right nav navbar-nav visible-lg visible-md">
                        <li><a href="/map/#/1"><i class="icon-map-marker icon-large"></i> New Spot</a></li>
                        <li><a href="/maps"><i class="icon-globe icon-large"></i> Maps</a></li>
                        <li><a href="/maps"><span class="badge badge-important">8</span></a></li>
                        <li class="nav-img"><a href="/maps"><img src="/img/Avatar-128.png" class="img-small"> Chaton</a></li>
                    </ul>
                    <!-- MENU LINKS FOR SMALL SCREENS -->
                    <ul class="pull-right nav navbar-nav visible-sm">
                        <li><a href="/map/#/1"><i class="icon-map-marker icon-large"></i></a></li>
                        <li><a href="/maps"><i class="icon-globe icon-large"></i></a></li>
                        <li><a href="/maps"><span class="badge badge-important">8</span></a></li>
                        <li class="nav-img"><a href="/maps"><img src="/img/Avatar-128.png" class="img-small"></a></li>
                    </ul>
                </div>
            </nav>

            <!-- MAIN CONTENT -->
            <div id="main">
                <%- body %>
            </div>

            <!-- FOOTER -->
            <footer id="footer">
                <small>
                    <hr>
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                            <ul class="list-unstyled">
                                <li>GitHub<li>
                                <li><a href="#">About us</a></li>
                                <li><a href="#">Blog</a></li>
                                <li><a href="#">Contact & support</a></li>
                                <li><a href="#">Enterprise</a></li>
                                <li><a href="#">Site status</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                            <ul class="list-unstyled">
                                <li>Applications<li>
                                <li><a href="#">Product for Mac</a></li>
                                <li><a href="#">Product for Windows</a></li>
                                <li><a href="#">Product for Eclipse</a></li>
                                <li><a href="#">Product mobile apps</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-12">
                            <ul class="list-unstyled">
                                <li>More<li>
                                <li><a href="#">Training</a></li>
                                <li><a href="#">Students & teachers</a></li>
                                <li><a href="#">The Shop</a></li>
                                <li><a href="#">Plans & pricing</a></li>
                                <li><a href="#">Contact us</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 pull-right">
                            <p class="muted pull-right">&copy; 2013 Company Name. All rights reserved</p>
                        </div>
                    </div>
                </small>
            </footer>
        </div>

        <!-- Vendor libs -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>       

        <%-scripts%>
            
    </body>
</html>

